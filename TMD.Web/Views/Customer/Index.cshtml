@model IEnumerable<TMD.Web.Models.CustomerModel>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

<div class="container-fluid">
    <header>
        <h3 class="page-title">
            @ViewBag.Title
        </h3>
        <h3> <small><a href="~/Customer/Create">Add New Customer</a></small></h3>
    </header>

    <form class="form-horizontal">
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box blue">
                    <table id="dataTable" class="display" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="tableHeaderWhite">Name</th>
                                <th class="tableHeaderWhite">Phone</th>
                                <th class="tableHeaderWhite">Address</th>
                                <th class="tableHeaderWhite">Email</th>
                                <th class="tableHeaderWhite">Comments</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.ActionLink(@item.Name, "Create", new { id = item.Id }) </td>
                                    <td>@item.Phone</td>
                                    <td>@item.Address</td>
                                    <td>@item.Email</td>
                                    <td>@item.Comments</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </form>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').dataTable({
            "sPaginationType": "full_numbers",
            "iDisplayLength": 10,
            "bFilter": false,
            "bLengthChange": false,
        });
    });
</script>



