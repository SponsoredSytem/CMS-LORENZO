@model IEnumerable<TMD.Web.Models.ProductCategoryModel>
@{
    ViewBag.Title = "Product Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["MenuKey"] = 11;
 }



<header>

    <h3 class="page-title">
        Categories <small></small>
    </h3>    
</header>
<!--Notifications begin-->
@Html.Partial("_Alert")
<!--Notifications end-->
<div class="container-fluid">
    <form class="form-horizontal">
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-cogs"></i>There are @(Model.Count()) Categories
                        </div>
                        <div class="tools">
                            <a href="~/ProductCategory/Create" style="color:white !important; font-size: 16px; text-decoration: underline; ">Add New Category</a>
                            <a href="javascript:;" class="collapse">
                            </a>                           
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-responsive">
                            <table id="UserList" class="table table-striped table-responsive">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.ActionLink(@item.Name + " " + @item.Description, "Create", new { id = item.CategoryId }) </td>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>                                            
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#UserList').dataTable({
            "sPaginationType": "full_numbers",
            "iDisplayLength": 10,
            "bFilter": false,
            "bLengthChange": false,
        });
    });
</script>