@model TMD.Web.ViewModels.ProductCategoryViewModel 
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["MenuKey"] = 8;
    Session["ParentMenu"] = 1;
}


@using (Html.BeginForm("Create", "ProductCategory", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="portlet box blue-hoki">
        <div class="portlet-title">

            <div class="tools">
                @*<a href="javascript:;" class="collapse">
                    </a>*@

                <button type="submit" class="btn btn-circle blue" onclick="return(ValidateFields(event));">Save</button>@*&& ValidateDropDown()*@
                <a href="~/ProductCategory/Index">
                    <button type="button" class="btn btn-circle default">Cancel</button>
                </a>
            </div>
            <div class="caption">
                <i class="fa fa-male"></i>Create/Update Product Category
            </div>
        </div>

        <div class="portlet-body form formMinHeight500">
            <div class="container-fluid">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ProductCategoryModel.CategoryId)
                @Html.HiddenFor(m => m.ProductCategoryModel.RecCreatedBy)
                @Html.HiddenFor(m => m.ProductCategoryModel.RecCreatedDate)

                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.ProductCategoryModel.Name, new { @class = "col-md-3 control-label requiredLabel" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.ProductCategoryModel.Name, new { @class = "form-control input-circle mandatory", placeholder = "Name" })
                    </div>
                </div>
                @*<div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.ProductCategoryModel.MainCategoryId, new { @class = "col-md-3 control-label" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(m => m.ProductCategoryModel.MainCategoryId, new SelectList(Model.ProductMainCategories, "CategoryId", "Name"), "Please select", new { @class = "form-control input-circle", placeholder = "Name" })
                    </div>
                </div>*@
                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.ProductCategoryModel.Description, new { @class = "col-md-3 control-label" })
                    <div class="col-md-4">
                        @Html.TextAreaFor(m => m.ProductCategoryModel.Description, new { @class = "form-control input-circle", placeholder = "Description" })
                    </div>
                </div>
            </div>

        </div>
        <script>
            function ValidateDropDown() {
                var value = $('#ProductCategoryModel_MainCategoryId option:selected').val();
                if (value == "" || value < 0)
                    return false;
                return true;
            }
        </script>
    </div>
}

