@using System.Configuration
@using Microsoft.AspNet.Identity
<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - InnoSTARK Technologies</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1.0" name="viewport" />
        <meta content="" name="description" />
        <meta content="" name="author" /> <!-- BEGIN GLOBAL MANDATORY STYLES -->
        <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
        <link href="~/Content/css/styleIST.css" rel="stylesheet" />
        <link href="~/Content/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/global/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/global/plugins/uniform/css/uniform.default.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/css/toastr.css" rel="stylesheet" />
        <link href="~/Content/css/datepicker.css" rel="stylesheet" />
        <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

        
        <!-- END GLOBAL MANDATORY STYLES -->
        <!-- BEGIN THEME STYLES -->
        <link href="~/Content/global/css/components.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/global/css/plugins.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/admin/layout/css/layout.css" rel="stylesheet" type="text/css" />
        <link id="style_color" href="~/Content/admin/layout/css/themes/default.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/admin/layout/css/custom.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />
        <!-- END THEME STYLES -->

        <script src="~/Content/global/plugins/jquery-1.11.0.min.js" type="text/javascript"></script>
        <script src="~/Content/global/plugins/jquery-migrate-1.2.1.min.js" type="text/javascript"></script>
        <script src="~/Scripts/App/jquery.dataTables.js"></script>
        
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    </head>

<body class="page-header-fixed page-quick-sidebar-over-content">
    <!-- BEGIN HEADER -->
    <div class="page-header navbar navbar-fixed-top">
        <!-- BEGIN HEADER INNER -->
        <div class="page-header-inner">
            <!-- BEGIN LOGO -->
            <div class="page-logo">
                <a href="~/Home/Index">
                    <img src="~/Images/Web/logo2.png" alt="logo" class="logo-default margin-top-10" />
                </a>
                <div class="menu-toggler sidebar-toggler hide">
                    <!-- DOC: Remove the above "hide" to enable the sidebar toggler button on header -->
                </div>
            </div>
            <!-- END LOGO -->
            <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse">
            </a>
            <!-- BEGIN TOP NAVIGATION MENU -->
            <div class="top-menu">
                <ul class="nav navbar-nav pull-right">
                    <!-- BEGIN NOTIFICATION DROPDOWN -->
                 
                    <!-- END NOTIFICATION DROPDOWN -->
                    <!-- BEGIN INBOX DROPDOWN -->
                 
                    <!-- END INBOX DROPDOWN -->
                    <!-- BEGIN TODO DROPDOWN -->
                 
                    <!-- END TODO DROPDOWN -->
                    <!-- BEGIN USER LOGIN DROPDOWN -->
                    <li class="dropdown dropdown-user">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                            @*<img alt="" class="img-circle" src="~/Content/admin/layout/img/avatar3_small.jpg" />*@
                            <span class="username username-hide-on-mobile" style="color: white">
                                @*@("Hello"+User.Identity.Name)*@
                                Welcome  @Session["FirstName"]
                            </span>
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="~/Account/Profile">
                                    <i class="icon-user"></i> My Profile
                                </a>
                            </li>
                          
                            <li class="divider">
                            </li>
                            <li>
                                <a href="~/Account/ChangePassword">
                                    <i class="icon-lock"></i> Change Password
                                </a>
                            </li>
                            <li>
                                <a href="~/Account/LogOff">
                                    <i class="icon-key"></i> Log Out
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- END USER LOGIN DROPDOWN -->
                    <!-- BEGIN QUICK SIDEBAR TOGGLER -->
                
                    <!-- END QUICK SIDEBAR TOGGLER -->
                </ul>
            </div>
            <!-- END TOP NAVIGATION MENU -->
        </div>
        <!-- END HEADER INNER -->
    </div>
    <!-- END HEADER -->
    <div class="clearfix"></div>
    <div class="page-container" style="background-color: #333">
        <!-- BEGIN Mobile SIDEBAR -->
        <div class="page-sidebar-wrapper">
            <!-- BEGIN HORIZONTAL RESPONSIVE MENU -->
            <!-- DOC: Set data-auto-scroll="false" to disable the sidebar from auto scrolling/focusing -->
            <!-- DOC: Change data-auto-speed="200" to adjust the sub menu slide up/down speed -->
            <div class="page-sidebar navbar-collapse collapse">
                <ul class="page-sidebar-menu page-sidebar-menu-closed" data-slide-speed="0" data-auto-scroll="true">
                    <!-- DOC: To remove the sidebar toggler from the sidebar you just need to completely remove the below "sidebar-toggler-wrapper" LI element -->
                    <li class="sidebar-toggler-wrapper">
                        <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
                        <div class="sidebar-toggler">
                        </div>
                        <!-- END SIDEBAR TOGGLER BUTTON -->
                    </li>
                    <!-- DOC: This is mobile version of the horizontal menu. The desktop version is defined(duplicated) in the header above -->

                    <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "1") ? "active" : "")>
                        <a href="~/Admin/Home" class="WhiteColor">
                            <i class="icon-home"></i>
                            <span class="title">Home</span>
                            <span class="selected"></span>
                        </a>
                    </li>
                    @if (User.IsInRole("Employee") || User.IsInRole("Admin"))
                    {
                        <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "2") ? "active" : "")>
                            <a href="~/Account/Profile" class="WhiteColor">
                                <i class="icon-notebook"></i>
                                <span class="title">Profile</span>
                                <span class="selected"></span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Employee"))
                    {
                        <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "3") ? "active " : "")>
                            <a href="~/Company/Index" class="WhiteColor">
                                <i class="icon-users"></i>
                                <span class="title">Company</span>
                                <span class="selected"></span>
                            </a>
                        </li>

                        <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "11") ? "active " : "")>
                            <a href="~/Product/Index" class="WhiteColor">
                                <i class="icon-basket"></i>
                                <span class="title">Product</span>
                                <span class="selected"></span>
                            </a>
                        </li>

                        <li class=@( (Session["ParentMenu"] != null && Session["ParentMenu"].ToString() == "2") ? "active open" : "")>
                            @{
                                            Session["ParentMenu"] = 0;
                            }
                            <a href="javascript:;">
                                <i class="icon-calendar"></i>
                                <span class="title">Events</span>
                                <span class="arrow "></span>
                            </a>
                            <ul class="sub-menu">
                                <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "21") ? "active " : "")>
                                    <a href="~/Event/Index">
                                        Events
                                    </a>
                                </li>
                                <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "22") ? "active " : "")>
                                    <a href="~/Event/Calendar">
                                        Calendar
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class=@( (Session["ParentMenu"] != null && Session["ParentMenu"].ToString() == "1") ? "active open" : "")>
                            @{
                            Session["ParentMenu"] = 0;
                        }
                            <a href="javascript:;">
                                <i class="icon-rocket"></i>
                                <span class="title">Reference Data</span>
                                <span class="arrow "></span>
                            </a>
                            <ul class="sub-menu">
                                <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "4") ? "active " : "")>
                                    <a href="~/Lookup/City">
                                        City
                                    </a>
                                </li>
                                <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "5") ? "active " : "")>
                                    <a href="~/Lookup/Municipals">
                                        Municipal
                                    </a>
                                </li>
                                <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "6") ? "active " : "")>
                                    <a href="~/Lookup/Sources">
                                        Source
                                    </a>
                                </li>

                                <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "7") ? "active " : "")>
                                    <a href="~/Lookup/CompanyStatuses">
                                        Company Statuses
                                    </a>
                                </li>
                                <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "8") ? "active " : "")>
                                    <a href="~/ProductCategory/Index">
                                        Product Categories
                                    </a>
                                </li>
                                <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "9") ? "active " : "")>
                                    <a href="~/Lookup/Color">
                                        Colors
                                    </a>
                                </li>
                                <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "10") ? "active " : "")>
                                    <a href="~/Lookup/Currency">
                                        Currencies
                                    </a>
                                </li>
                                <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "12") ? "active " : "")>
                                    <a href="~/Lookup/Size">
                                        Sizes
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li class=@( (Session["MenuKey"] != null && Session["MenuKey"].ToString() == "3") ? "active" : "")>
                            <a href="~/Account/Users" class="WhiteColor">
                                <i class="icon-wallet"></i>
                                <span class="title">Accounts</span>
                                <span class="selected"></span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <!-- END HORIZONTAL RESPONSIVE MENU -->
        </div>
        <!-- END Mobile SIDEBAR -->
        <div class="page-content-wrapper">
            <div class="page-content">

                @RenderBody()
                
            </div>
        </div>
        @if (ViewBag.MessageVM != null)
        {
            <input type="hidden" id="Message" value="@ViewBag.MessageVM.Message" />
            <input type="hidden" id="IsSaved" value="@ViewBag.MessageVM.IsSaved" />
            <input type="hidden" id="IsUpdated" value="@ViewBag.MessageVM.IsUpdated" />
            <input type="hidden" id="IsError" value="@ViewBag.MessageVM.IsError" />
            <input type="hidden" id="IsInfo" value="@ViewBag.MessageVM.IsInfo" />
        }
    </div>
    <div class="clearfix"></div>
            <div class="page-footer" style="position: relative">
                <div class="page-footer-inner">
                    2015 &copy; UI theme by InnoSTARK.
                </div>
                <div class="page-footer-tools">
                    <span class="go-top">
                        <i class="fa fa-angle-up"></i>
                    </span>
                </div>

                @if (Request.Url.Host.ToLower().Contains("localhost"))
                {
                    <input type="hidden" id="siteURL" value="http://localhost:23867/" />
                }
                else
                {
                    
                    <input type="hidden" id="siteURL" value="@( "http://"+Request.Url.Host.ToLower()+"/")" />
                }
                
                
            </div>

            <script src="~/Scripts/jquery.pulsate.min.js"></script>
            <script src="~/Content/global/plugins/jquery-ui/jquery-ui-1.10.3.custom.min.js" type="text/javascript"></script>
            <script src="~/Content/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
            <script src="~/Content/global/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
            <script src="~/Content/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
            <script src="~/Content/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
            <script src="~/Content/global/plugins/jquery.cokie.min.js" type="text/javascript"></script>
            <script src="~/Content/global/plugins/uniform/jquery.uniform.min.js" type="text/javascript"></script>
    <script src="~/Content/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
    @*<script src="~/Scripts/layout.js"></script>*@
    
    
    <script src="~/Content/global/scripts/metronic.js" type="text/javascript"></script>
    <script src="~/Content/Admin/layout/scripts/layout.js"></script>
    <script src="~/Content/Admin/layout/scripts/quick-sidebar.js"></script>

    <script src="~/Scripts/App/ValidateFields.js"></script>

    <script src="~/Scripts/App/toastr.js"></script>
    <script src="~/Scripts/App/architecture.js"></script>
    <script src="~/Scripts/Functions/scriptIST.js"></script>
    <script>
                jQuery(document).ready(function () {
                    Metronic.init(); // init metronic core components
                    Layout.init();
                    QuickSidebar.init(); // init quick sidebar
                });
            </script>

</body>

</html>
