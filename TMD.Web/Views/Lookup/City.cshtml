@model IEnumerable<TMD.Web.Models.City>
@{
    ViewBag.Title = "City";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["MenuKey"] = 24;
}

<div class="container-fluid">
    @*<header>
        <h3 class="page-title">
            @ViewBag.Title
        </h3>
        
    </header>*@
    <div class="row-fluid">
        <div class="span12">

            <div class="portlet box blue-hoki">
                <div class="portlet-title">
                    <div class="caption" >
                        <label class="margin-top-10" style="font-size: 20px" > Cities </label>
                    </div>

                    <div class="tools">
                        @*<label>City</label>*@
                        
                        <input type="button" class="btn blue titleButton" id="btnResetFltr" style="float:right" value="Reset">
                        <input type="button" class="btn green" id="btnFltr" style="float:right" value="Filter" />
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-actions">
                        <div>
                            <table class="responsive">
                                <tr>
                                    <td class="col-md-1">
                                        <label class="control-label"> Search By</label>
                                    </td>
                                    <td class="col-md-2">
                                        <div class="input-icon">
                                            <i class="fa fa-search"></i>
                                            @Html.TextBox("Barcode", "", new { @class = "searchInputs form-control listFilter", @id = "SearchBox", @placeholder = "Name/Description" })
                                        </div>
                                    </td>
                                    <td class="col-md-4"></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            
            <div class="portlet box blue-hoki">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cogs"></i>There are @(Model.Count()) Cities
                    </div>
                    <div class="tools">
                        <a href="~/Lookup/CityCreate" style="color:white !important; font-size: 16px; text-decoration: underline; ">Add New City</a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive formMinHeight500">
                        
                            <table id="dataTable" class="table table-striped table-responsive" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th >Name</th>
                                        <th >Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                            {
                                    <tr>
                                        <td>@Html.ActionLink(@item.CityName, "CreateCity", new { id = item.CityId }) </td>
                                        <td>@item.CityDescription</td>
                                    </tr>
                            }
                                </tbody>

                            </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form class="form-horizontal">
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box blue">
            
                </div>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').dataTable({
            "sPaginationType": "full_numbers",
            "iDisplayLength": 10,
            "bFilter": false,
            "bLengthChange": false,
        });

        $('#btnFltr').on('click', function (e) {
            var searchN = $('#SearchBox').val();
            oTable.fnFilter(searchN, 0);
        });

        $('#btnResetFltr').on('click', function (e) {
            $('#SearchBox').val("");
            oTable.fnFilter('', 0);
        });
    });
</script>

