@model TMD.Web.Models.ColorModel
@{
    ViewBag.Title = "Manage Color";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Session["MenuKey"] = 9;
    Session["ParentMenu"] = 1;
}

@using (Html.BeginForm("ColorManage", "Lookup", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="portlet box blue-hoki">
        <div class="portlet-title">

            <div class="tools">
                @*<a href="javascript:;" class="collapse">
                    </a>*@

                <button type="submit" class="btn btn-circle blue" onclick="return(ValidateFields(event));">Save</button>
                <a href="~/Lookup/Color">
                    <button type="button" class="btn btn-circle default">Cancel</button>
                </a>
            </div>
            <div class="caption">
                <i class="fa fa-male"></i>Create/Update Color
            </div>
        </div>

        <div class="portlet-body form formMinHeight500">
            <div class="container-fluid">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ColorId)
                @Html.HiddenFor(m => m.RecCreatedBy)
                @Html.HiddenFor(m => m.RecCreatedDate)

                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.ColorTitle, new { @class = "col-md-3 control-label requiredLabel" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.ColorTitle, new { @class = "form-control input-circle mandatory", placeholder = "Color Title" })
                    </div>
                </div>

                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.ColorValue, new { @class = "col-md-3 control-label requiredLabel" })
                    <div class="col-md-4">
                        @Html.TextAreaFor(m => m.ColorValue, new { @class = "form-control input-circle mandatory", placeholder = "Color Value" })
                    </div>
                </div>

                <div class="form-group margin-top-20">
                    @Html.LabelFor(m => m.ColorDescription, new { @class = "col-md-3 control-label" })
                    <div class="col-md-4">
                        @Html.TextAreaFor(m => m.ColorDescription, new { @class = "form-control input-circle", placeholder = "Color Description" })
                    </div>
                </div>
            </div>

        </div>
    </div>
}


