@model IEnumerable<TMD.Web.Models.VendorModel>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
        Session["MenuKey"] = 28;
    }

    <div class="container-fluid">
        <header>
            <h3 class="page-title">
                @ViewBag.Title
            </h3>
            <h3> <small><a href="~/Vendor/Create">Add New Vendor</a></small></h3>
        </header>

        <form class="form-horizontal">
            <div class="row-fluid">
                <div class="span12">
                    <div class="portlet box blue">
                        <table id="dataTable" class="display" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="tableHeaderWhite">Name</th>
                                    <th class="tableHeaderWhite">ContactNo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.ActionLink(@item.Name, "Create", new { id = item.VendorId }) </td>
                                        <td>@item.ContactNo</td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#dataTable').dataTable({
                "sPaginationType": "full_numbers",
                "iDisplayLength": 10,
                "bFilter": false,
                "bLengthChange": false,
            });
        });
    </script>
